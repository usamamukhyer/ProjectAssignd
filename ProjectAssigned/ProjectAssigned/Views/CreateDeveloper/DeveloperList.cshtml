@model IEnumerable<ProjectAssigned.Models.CreateDeveloper>



@{
    ViewBag.Title = "Assigntable";
    Layout = "~/Views/Shared/_ProjectAdminPannelLayout.cshtml";
}

<div class="app-content  my-3 my-md-5">
    <div class="side-app">
        <div class="page-header">
            <h4 class="page-title">Data</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Data</a></li>
                <li class="breadcrumb-item active" aria-current="page">Data</li>
            </ol>

        </div>
        <div class="row">

            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Data</div>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example2" class="hover table-bordered border-top-0 border-bottom-0">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(m => m.Firstname)</th>
                                        <th>@Html.DisplayNameFor(m => m.Lastname)</th>
                                        <th>@Html.DisplayNameFor(m => m.Designation)</th>
                                        <th>@Html.DisplayNameFor(m => m.Salary)</th>
                                        <th>@Html.DisplayNameFor(m => m.Address)</th>
                                        <th>@Html.DisplayNameFor(m => m.Joindate)</th>
                                        <th> Edit</th>
                                        <th> Edit</th>


                                    </tr>
                                </thead>
                                <tbody>
                                  @foreach(var item in Model)
                                  { 
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(mitem => item.Firstname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(mitem => item.Lastname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(mitem => item.Designation)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(mitem => item.Salary)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(mitem => item.Address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(mitem => item.Joindate)
                                        </td>
                                        <td>
                                            <img  src="@Url.Content(item.Image)" width="50" height="50" />
                                        </td>

                                        <td> @Html.ActionLink("Edit", "EditDeveloper", new { id = item.Developer_Id })</td>
                                    </tr>
                                  }
                                    

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Mysection{

    <!-- Data table css -->
    <link href="~/Content/assets/plugins/datatable/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/assets/plugins/datatable/jquery.dataTables.min.css" rel="stylesheet" />
    <!-- Data tables -->
    <script src="~/Content/assets/plugins/datatable/jquery.dataTables.min.js"></script>
    <script src="~/Content/assets/plugins/datatable/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/assets/js/datatable.js"></script>

}


