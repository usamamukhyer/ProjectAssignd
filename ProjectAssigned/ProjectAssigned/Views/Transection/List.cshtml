<!-- Data table css -->
<link href="//cdn.datatables.net/1.11.2/css/jquery.dataTables.min.css" />
@section Mysection{
    <script src="//cdn.datatables.net/1.11.2/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#transectionTable").DataTable(
                {
                                "ajax": {
                                "url": "/Transection/List",
                                "type": "GET",
                                "datatype": "json"
                            },
                            "columns": [
                                { "data": "CashType", "autoWidth": true },
                                { "data": "Date", "autoWidth": true },
                                { "data": "Amount", "autoWidth": true },
                                { "data": "IncomeCollectFrom", "autoWidth": true },
                                { "data": "Discription", "autoWidth": true },
                                { "data": "PostalCode", "autoWidth": true }
                            ],

                          "serverSide": "true",
                          "order": [0, "asc"]
                     
                }
            );

        });

    </script>
